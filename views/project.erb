<% proj = @proj %>
<div class="project_wrapper">
	<div class="header">
		<h3><%= proj.title %></h3>
		<ul class="tags">
			<% proj.tags.each do |tag| %>
			<li class="<%= get_tag_class tag %>"><%= tag %></li>
			<% end %>
		</ul>
	</div>
	<p>
		<%= format_post proj.content %>
		<style><%= Pygments.css %></style>
	</p>
</div>