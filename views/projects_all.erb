<div id="project_main">
    <div class="header parallax">
        <h1 class="header">Projects</h1>
    </div>
    <div class="content">
        <ul>
            <% Project.all.each_with_index do |(slug, proj), idx| %>
            <li class="blog-post project">
                <div class="masthead">
                    <div class="title">
                        <h1><a href="/project/<%= slug %>"><%= proj.title %></a></h1>
                        <% if proj.repo %>
                        <a title="Git Repository" class="repo icon-github-circled" href="<%= proj.repo %>"><span class="src"></span></a>
                        <% end %>
                    </div>
                    <ul class="tags">
                        <% proj.tags.each do |tag| %>
                        <li class="tag <%= get_tag_class tag %>"><%= get_tag_name tag %></li>
                        <% end %>
                    </ul>
                </div>
                <div class="clear"></div>
                <p>
                        <%= format_post proj.summary %>
                </p>
                <div class="controls bottom">
                    <span><a class="btn read-more" href="/project/<%= slug %>">See more</a></span>
                </div>
            </li>
            <% end %>
        </ul>
    </div>
</div>